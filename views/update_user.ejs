<%- include('include/_header') %>
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-content-between p-3">
            <a href="/home" class="btn btn-primary">
                Volver a usuarios
            </a>
        </div>

 <form method="POST" id="update_user">
    <div class="container mt-5">
        <div class="form-group">
            <label for="name" class="text-light">Nombre</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input class="form-control" type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <br>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input class="form-control" type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <br>

        <div class="form-group">
            <label for="gender" class="text-light">Genero</label>
            <div class="radio inline">
                <input   class="form-check-input" type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
                <label for="radio-2"class="form-check-label">Masculino</label>
            </div>
            <div class="radio inline">
                <input  class="form-check-input" type="radio" id="radio-3" name="gender" value="Female"  <%= user.gender == 'Female' ? 'checked' : '' %> >
                <label for="radio-3" class="form-check-label">Femenino</label>
            </div>
        </div>
        <br>

        <div class="form-group">
            <label for="gender" class="text-light">Estado</label>
            <div class="radio inline">
                <input class="form-check-input" type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="form-check-label">Activo</label>
            </div>
            <div class="radio inline">
                <input class="form-check-input" type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="form-check-label">Inactivo</label>
            </div>
        </div>
<br>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<%- include('include/_footer') %>

