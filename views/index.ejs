

    <%- include('include/_header') %>

    

<main id="site-main" class="container pt-2 text-center d-flex justify-content-center align-items-center ">
    <div class="container">
        <div class="box-nav d-flex justify-content-between p-3">
            <a href="/add-user" class="btn btn-primary">
        Nuevo Usuario
            </a>
        </div>
        <div class="table-responsive">
        <form action="/home" method="POST">
            <table class="table table-dark">
                <thead >
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Mail</th>
                        <th>Genero</th>
                        <th>Estado</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody class="table table-dark text-white" >
                    <% for(var i = 0; i < users.length; i++) { %>
                        <tr class="table table-dark text-white">
                            <td ><%= i + 1 %></td>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].gender %></td>
                            <td><%= users[i].status %></td>
                            <td>
                                <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update text-white">
                                    <span class="text-white"><i class="fas fa-pencil-alt text-white"></i></span>
                                </a>
                                <a class="btn border-shadow delete text-white" data-id=<%= users[i]._id%> >
                                    <span class=" text-white"><i class="fas fa-times text-white"></i></span>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </form>
    </div>
    </div>
</main>

<%- include('include/_footer') %>
